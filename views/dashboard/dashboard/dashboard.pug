extends ../../layout

block head
  link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
  link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.6.3/css/all.css", integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/", crossorigin="anonymous")
  link(rel="stylesheet", href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css")

block content
  .pb-2.mt-2.mb-4.border-bottom
    h1(style="text-align:center;") Welcome #{user.email}
  .pb-2.mt-2.mb-4.border-bottom 
    .row
        .col-md-12
          if businessCard
            .business-card 
              .card
                .card-body
                  .row
                    .col-md-5 our logo here
                    .col-md-7
                      .row
                        .col-md-12
                          span(style="font-weight: 700;font-size: xx-large;")=`Welcome to ${businessCard.companyName}`
                          <br />
                          <br />
                          span(style="font-size: large;font-weight: 500;")=`${businessCard.streetAddress}`
                          <br />
                          span(style="font-size: large;font-weight: 500;")=`${businessCard.streetAddress2}`
                          <br />
                          span(style="font-size: medium;font-weight: 500;")=`${businessCard.contactInfo}`
                          <br />
                          <br />
                          span(style="font-size: small;font-weight: 100;")=`${businessCard.buyerReqs}`
                      .row
                        .col-md-6
                          span(style="font-weight: 700;font-size: larger;")=`SHIPPING`
                        .col-md-6
                          span(style="font-size: small;font-weight: 100;")=`${businessCard.shippingFrom}`
                      .row
                        .col-md-6
                          span(style="font-weight: 700;font-size: larger;")=`CURRENT MARKET PROMO`
                        .col-md-6
                          span(style="font-size: small;font-weight: 100;")=`${businessCard.promos}`
                      .row
                        .col-md-6
                          span(style="font-weight: 700;font-size: larger;")=`CONTACT`
                        .col-md-6
                          span(style="font-size: small;font-weight: 100;")=`${businessCard.companyContactInfo}`
                  .row
                    .col-md-10
                    .col-md-2
                  .row
                    .col-md-3
                    .col-md-3
                    .col-md-3
                  .row
                    .col-md-3
                    .col-md-3
                    .col-md-3
                  .row
                    .col-md-12
    .row
        .col-md-6
            button.btn.btn-primary(type="button", style="float:right;margin:2%;") Enable/Disable QR Code
        .col-md-6
            button.btn.btn-primary(type="button", style="float:left;margin:2%;") Enter My QR Code
    .row
        .col-md-6
          a.button.btn.btn-primary(type="button", href="/dashboard/calendar" style="float:right;margin:2%;") Calendar and Appointments
        .col-md-6
            button.btn.btn-primary(type="button", style="float:left;margin:2%;") Catalog Requests
    .row
        .col-md-6
            button.btn.btn-primary(type="button", style="float:right;margin:2%;") Scans Tracker
        .col-md-6
            button.btn.btn-primary(type="button", style="float:left;margin:2%;") Feedback 

  .pb-2.mt-2.mb-4.border-bottom