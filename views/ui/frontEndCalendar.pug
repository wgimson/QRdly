extends ../frontEndLayout

block head
  link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
  link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.6.3/css/all.css", integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/", crossorigin="anonymous")
  link(rel="stylesheet", href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css")
  style.
    .ui-dialog { 
      z-index: 1!important ;
      background: white !important;
      border: 1px dotted #343a40;
      padding-left: 5px !important; 
      padding-bottom: 5px !important;
      
    }
    .no-close .ui-dialog-titlebar-close {
      display: none;

    }
    select {
      margin-top: 5px;
      padding-top: 2px;
      padding-bottom: 2px;
    }
    
    input {
      margin-top: 5px !important;
    }
    #apptDialog {
      display: none;
    }
block content
  div(class="container")
    h1 #{businessName}
        hr
  div(id='frontEndCalendar')
    div(class="container")
      div(id="apptDialog" title="Make an appointment") 
        form(id="apptDialogForm"  method='POST' action='/meeting/create')
          input(type="hidden" name="business" id="business" value=businessName)
          input(type="hidden" name="meetings" id="meetings" value=meetings)
          input(type='hidden', name='_csrf', value=_csrf)
          input(type="datetime-local" id="date-input" name="datetime" min="#{date}T00:00" max="2022-06-14T00:00") 
          br
          small
          | (Office hours are 9am to 6pm)
          br
          select(name="duration")
            option(value="thirty") 30 minutes 
            option(value="ninety") 1 hour and 30 minutes
          | &nbsp;duration
          input(type="tel" id="contact-input" name="contact") 
          | &nbsp;phone number
        
    
      

