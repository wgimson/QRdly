    script.
      document.addEventListener('DOMContentLoaded', function() {
        //front end calendar
        $( "#apptDialog" ).dialog({
            dialogClass: "no-close",
            buttons: [
                {
                    text: "Schedule Appointment",
                    click: function() {
                        $('#apptDialogForm').submit();
                        $( this ).dialog( "close" );
                    }
                },
                {
                    text: "Cancel",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ],
            resizeable: true,
            autoOpen: false,
            minWidth: 300,
            minHeight: 150,
            show: { effect: "blind", duration: 800 }

        });
        //get all meetings for this company
        let meetings = document.getElementById('meetings').value;
        let meetingArray = JSON.parse(meetings);
        var parsedMeetingArray = [];
        var end = null
        meetingArray.forEach(function(meeting){
            if(meeting.duration === "ninety"){
                end = new Date(meeting.datetime)
                end.setHours(end.getHours() + 1);
                end.setMinutes(end.getMinutes() + 30);
            }else{
                end = new Date(meeting.datetime)
                end.setMinutes(end.getMinutes() + 30);
            }
            parsedMeetingArray.push({ title: meeting.duration + " min meeting w/ " + meeting.businessName,  start: meeting.datetime, end: end });
        });
        console.log('end: ' + end)
        var calendarEl = document.getElementById('frontEndCalendar');
        var frontEndCalendar = new FullCalendar.Calendar(calendarEl, {
            events: 
                parsedMeetingArray
            ,
           editable: false,
            initialView: 'timeGridWeek',
            headerToolbar: {
                left: 'addEventButton',
                right: 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            customButtons: {
                addEventButton: {
                    text: 'add meeting',
                    click: function() {
                        $("#apptDialog").dialog('open');

                    }
                }
            },
           
        });

        if(calendarEl){
          frontEndCalendar.render();
        }
      });
